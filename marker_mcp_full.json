{
  "name": "marker",
  "version": "1.0.0",
  "description": "MCP server for marker",
  "server": {
    "command": "/home/graham/workspace/experiments/marker/.venv/bin/python",
    "args": [
      "scripts/cli/marker_mcp_cli.py",
      "serve-mcp",
      "--host",
      "localhost",
      "--port",
      "5000"
    ]
  },
  "tools": {
    "extract-pdf": {
      "description": "Extract content from a single PDF file.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "pdf_path": {
            "type": "string",
            "description": "Parameter: pdf_path"
          },
          "output_format": {
            "type": "string",
            "description": "Parameter: output_format"
          },
          "output_dir": {
            "type": "string",
            "description": "Parameter: output_dir"
          },
          "use_llm": {
            "type": "boolean",
            "description": "Parameter: use_llm"
          },
          "extract_images": {
            "type": "boolean",
            "description": "Parameter: extract_images"
          },
          "add_summaries": {
            "type": "boolean",
            "description": "Parameter: add_summaries"
          }
        },
        "required": []
      }
    },
    "extract-tables": {
      "description": "Extract tables from a PDF file.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "pdf_path": {
            "type": "string",
            "description": "Parameter: pdf_path"
          },
          "output_file": {
            "type": "string",
            "description": "Parameter: output_file"
          },
          "format": {
            "type": "string",
            "description": "Parameter: format"
          }
        },
        "required": []
      }
    },
    "extract-sections": {
      "description": "Extract specific sections from a PDF document.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "pdf_path": {
            "type": "string",
            "description": "Parameter: pdf_path"
          },
          "section_id": {
            "type": "string",
            "description": "Parameter: section_id"
          },
          "output_file": {
            "type": "string",
            "description": "Parameter: output_file"
          }
        },
        "required": []
      }
    },
    "batch-extract": {
      "description": "Extract content from multiple PDF files in batch mode.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "input_dir": {
            "type": "string",
            "description": "Parameter: input_dir"
          },
          "output_dir": {
            "type": "string",
            "description": "Parameter: output_dir"
          },
          "workers": {
            "type": "integer",
            "description": "Parameter: workers"
          },
          "output_format": {
            "type": "string",
            "description": "Parameter: output_format"
          }
        },
        "required": []
      }
    },
    "validate-extraction": {
      "description": "Validate the quality of extracted content.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "json_file": {
            "type": "string",
            "description": "Parameter: json_file"
          },
          "verbose": {
            "type": "boolean",
            "description": "Parameter: verbose"
          }
        },
        "required": []
      }
    },
    "version": {
      "description": "Display Marker version information.",
      "inputSchema": {
        "type": "object",
        "properties": {},
        "required": []
      }
    }
  },
  "capabilities": {
    "tools": true,
    "prompts": false,
    "resources": false
  }
}